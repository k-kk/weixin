
.post_container{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx 0;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 20rdx;
}

.post_author_date{
    margin: 10rpx 20rpx 0 10rpx;
}

.post_author{
  width: 60rpx; height: 60rpx;
  vertical-align: middle;
}

.post_date{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}

.post_title{
  font-size: 34rpx;
  font-weight: 600;
  color: #ccc;
  margin: 10rpx 0 10rpx 10rpx;
}

.post_image{
  margin-left: 10px;
  width: 100%; height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}
.post_content{
  color: #666; font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2px;
  line-height: 40rpx;
}

.post_like{
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}

.post_link_image{
  height: 16px; width: 16px;
  margin-right: 8px;
  vertical-align: middele;
}

.post_link_font{
  vertical-align: middle;
  margin-right: 20px;
}
