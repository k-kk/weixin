
page{
    height: 100%;
    background-color: #b3d4eb;
}

.container{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.user_name{
    font-size: 32rpx;
    font-weight: bold;
    margin-top: 100rpx;
}

.moto{
    font-size: 22rpx; font-weight: bold;
    color: #405f80;
    line-height: 80rpx;
}

.moto_container{
    border: 1px solid #405f80;
    width: 200rpx; height: 80rpx;
    border-radius: 5px;
    text-align: center;
    margin-top: 200rpx;
}

.user_avatar{
    width: 200rpx; height: 200rpx;
    margin-top: 160rpx;
}